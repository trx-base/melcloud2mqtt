      "device_class": "humidity",
      "name": deviceId + "_humidity",
      "state_topic": "homeassistant/sensor/" + deviceId + "/state",
      "unit_of_measurement": "%",
      "unique_id": deviceId + "_humidity",
      "value_template": "{{ value_json.humidity}}" 
    }
    const smell = {
